void daysolve( int x)
{
    switch (x)
    {
        case 0:
        cout << "The first day  is Saturday"<< endl;
        break;
        case 1:
        cout << "The first day  is Sunday.\n";
        break;
        case 2:
        cout << "The first day is Monday.\n";
        break;
        case 3:
        cout << "The first day is Tuesday.\n";
        break;
        case 4:
        cout << "The first day is Wednesday.\n";
        break;
        case 5:
        cout << "The first day is Thursday.\n";
        break;
        case 6:
        cout << "The first day is Friday.\n";
        break;
        case 7:
        cout<< "The first day  is Saturday.\n";
        break;
        default:
        cout<< "You may have made an error, please reenter your info.\n";
    }
}
