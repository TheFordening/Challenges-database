#include <iostream>

using namespace std;

int main()
{
    int zeroto1k;
    int a;
    int b;
    int c;
    int d;
    int e;
    int f;
    cout << "Please enter a number between 0 and 1000, not including 0 and 1000" << endl;
    cin >> zeroto1k;
    if (zeroto1k<=0 || zeroto1k>=1000)
    {
        cout << "you're an idiot"<< endl;
    }
    else
    {
        cout<< "thanks for complying"<< endl;
    }
    if (zeroto1k < 10 && zeroto1k > 0)
    {
        cout << "The sum is..."<< endl;
        cout << zeroto1k<< endl;
    }
    else if (zeroto1k == 10)
    {
        cout << "The sum is..."<< endl;
        cout << zeroto1k<< endl;
    }
    else if (zeroto1k>10 && zeroto1k<100)
    {
        a = zeroto1k % 10;
        b = zeroto1k / 10;
        c = a + b;
        cout << "The sum is..."<< endl;
        cout << c << endl;
    }
    else if (zeroto1k >100 && zeroto1k<1000)
    {
        a = zeroto1k % 10;
        b = zeroto1k / 10;
        c = b % 10;
        d = b / 10;
        e = a + c + d;
        cout << "The sum is..."<< endl;
        cout << e << endl;
    }
    else
    {
        cout << "As previously stated, youre an idiot."<< endl;
    }

    return 0;

}
